{
  "name": "@nailahq/tail-ui",
  "version": "1.0.0",
  "description": "A React Tailwind Component Library",
  "author": "Arpit Yadav",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "types": "dist/index.d.ts",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "NODE_ENV=publish microbundle-crl --no-compress --format modern,cjs",
    "start": "NODE_ENV=development microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nailahq/tail-ui.git"
  },
  "bugs": {
    "url": "https://github.com/nailahq/tail-ui/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.5",
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "autoprefixer": "^9.8.8",
    "dotenv": "^14.3.2",
    "eslint": "^8.7.0",
    "microbundle-crl": "^0.13.11",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.39",
    "postcss-cli": "^9.1.0",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.5.1",
    "react-scripts": "^5.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
    "typescript": "^4.5.5"
  },
  "files": [
    "dist"
  ]
}
